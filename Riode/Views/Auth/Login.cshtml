@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel
<main class="main">
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="demo1.html"><i class="d-icon-home"></i></a></li>
                <li><a href="shop.html">Riode Shop</a></li>
                <li>My Account</li>
            </ul>
        </div>
    </nav>
    @if (TempData["ConfirmationMessage"] != null)
        {

            <div>
                <div class="alert alert-success" role="alert">
                @TempData["ConfirmationMessage"]
                </div>

            </div>
        }
    <div class="page-content mt-6 pb-2 mb-10">
        <div class="container">
            <div class="login-popup">
                <div class="form-box">
                    <div class="tab tab-nav-simple tab-nav-boxed form-tab">
                        <ul class="nav nav-tabs nav-fill align-items-center border-no justify-content-center mb-5" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active border-no lh-1 ls-normal" href="#signin">Login</a>
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="signin">
                                <form method="post">
                                    <div class="form-group mb-3">
                                        <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username or Email adress" />
                                        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <input asp-for=Password class="form-control" placeholder="Password"
                                               required />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-footer">
                                        <div class="form-checkbox">
                                            <input class="custom-checkbox" asp-for="RememberMe"
                                                   name="signin-remember" />

                                            <label class="form-control-label" for="signin-remember">
                                                Remember
                                                me
                                            </label>
                                        </div>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <a asp-action="ForgotPassword" class="lost-link">Forgot password?</a>
                                    </div>
                                    <button class="btn btn-dark btn-block btn-rounded" type="submit">Login</button>
                                </form>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

