@model List<Product>

@foreach (var product in Model)
{

    <div class="product text-center">
        <figure class="product-media">
            <a href="~/assets/product.html">
                <img src="~/assets/images/demos/demo1/products/@product.Image" alt="Blue Pinafore Denim Dress"
                     width="280" height="315" style="background-color: #f2f3f5;" />
            </a>
            <div class="product-label-group">
                <label class="product-label label-new">new</label>
            </div>
            <div class="product-action-vertical">
                <a href="~/assets/#" class="btn-product-icon btn-cart" data-toggle="modal"
                   data-target="#addCartModal" title="Add to cart"><i class="d-icon-bag"></i></a>
                <a href="~/assets/#" class="btn-product-icon btn-wishlist" title="Add to wishlist">
                    <i class="d-icon-heart"></i>
                </a>
            </div>
            <div class="product-action">
                <a href="~/assets/#" class="btn-product btn-quickview" title="Quick View">Quick View</a>
            </div>
        </figure>
        <div class="product-details">
            <div class="product-cat">
                <a href="~/assets/shop-grid-3cols.html">@product.Name</a>
            </div>
            <h3 class="product-name">
                <a href="~/assets/product.html">@product.Description</a>
            </h3>
            <div class="product-price">
                <span class="price">$ @product.Price</span>
            </div>
            <div class="ratings-container">
                <div class="ratings-full">
                    <span class="ratings" style="width:100%"></span>
                    <span class="tooltiptext tooltip-top"></span>
                </div>
                <a href="~/assets/product.html" class="rating-reviews">( 12 reviews )</a>
            </div>
        </div>
    </div>
}
