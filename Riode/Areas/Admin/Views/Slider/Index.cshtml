@{
    ViewData["Title"] = "Index";
}
@model List<Slider>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
             <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sliders</h4>
                        <li class="nav-item dropdown d-lg-flex d-none">
                            <a type="button" class="btn btn-info font-weight-bold" asp-action="Create">Create New</a>
                        </li>
                          <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Offer</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var slider in Model)
                                    {
                                          <tr>
                                            <td>
                                                <img src="~/assets/images/demos/demo1/slides/@slider.Image">
                                            </td>
                                            <td>@slider.Title</td>
                                            <td> @slider.Offer</td>
                                            <td>
                                                <a class="btn btn-info" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                                                <a class="btn btn-warning" asp-action="Update" asp-route-id="@slider.Id">Update</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slider.Id">Delete</a>
                                            </td>
                                         </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



