
@{
    ViewData["Title"] = "Blog";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">products</h4>
                        <li class="nav-item dropdown d-lg-flex d-none">
                            <a type="button" class="btn btn-info font-weight-bold" asp-action="Create">Create New</a>
                        </li>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Rating</th>
                                        <th>Category</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {

                                        <tr>
                                            <td>
                                                <img src="~/assets/images/demos/demo1/products/@product.Image">
                                            </td>
                                            <td>@product.Name</td>
                                            <td> @product.Price</td>
                                            <td> @product.Rating</td>
                                            <td> @product.Category.Name</td>


                                            <td>
                                                <a class="btn btn-info" asp-action="Detail" asp-route-id="@product.Id">Detail</a>
                                                <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">Update</a>
                                                <a class="btn btn-danger deleteBtn" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>







